<h2>会員情報編集</h2>
<%= form_for(@customer) do |f| %>
  <div>
    <table>
      <tr>
        <td>氏名</td>
        <td>
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
        </td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
        </td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
         <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
         <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
         <td><%= f.text_field :email %></td>
      </tr>
    </table>
    <div class="row"><%= f.submit "変更を保存" %></div>
    <div class="row"><%= link_to "退会する", withdrawal_customer_path(@customer) %></div>
  </div>
<% end %>
