<div class="container mt-4">
  <div class="row">
    <div class="offset-sm-2">
      <h4>マイページ</h4>
    </div>
  </div>
  <div class="row mt-4">
    <strong class="col-sm-1">登録情報</strong>
    <%= link_to "編集する", edit_customer_path(@customer), class:"btn btn-success ml-4" %>
  </div>
  <div class="row mt-3">
    <div class="col-sm-7">
      <table class="table table-bordered">
      <tr>
        <td class="col-sm-4">氏名</td>
        <td>
  		    <%= @customer.last_name %>
  		    <%= @customer.first_name %>
  		  </td>
      </tr>
      <tr>
        <td class="col-sm-4">フリガナ</td>
        <td>
          <%= @customer.last_name_kana %>
          <%= @customer.first_name_kana %>
        </td>
      </tr>
      <tr>
        <td class="col-sm-4">郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td class="col-sm-4">住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td class="col-sm-4">電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td class="col-sm-4">メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </table>
    </div>
  </div>
  <div class="row mt-3">
    <strong class="col-sm-1">配送先</strong>
    <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %>
  </div>
  <div class="row mt-3">
    <strong class="col-sm-1">注文履歴</strong>
    <%= link_to "一覧を見る", orders_path, class:"btn btn-primary"  %>
  </div>
</div>