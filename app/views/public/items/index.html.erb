<h2>商品一覧</h2>
<div>
  <table>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td>
            <%= link_to item_path(item) do %>
		          <%= attachment_image_tag item, :image, size: "150x150", format: 'jpeg' %>
		        <% end %>
          </td>
          <td><%= item.name %></td>
          <td>¥<%= item.price %></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>