<h2>配送先登録/一覧</h2>
<div>
  <%= form_for(@address_new) do |f| %>
    <div>
      郵便番号（ハイフンなし）
      <%= f.text_field :postal_code, placeholder: "0000000" %>
    </div>
    <div>
      住所
      <%= f.text_field :address,  placeholder: "0000000" %>
    </div>
    <div>
      宛名
      <%= f.text_field :name, placeholder: "令和道子" %>
      <%= f.submit "新規登録" %>
    </div>
  <% end %>
</div>

<div>
  <table>
    <thead>
      <tr>
        <td>郵便番号</td>
        <td>住所</td>
        <td>宛名</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <%= @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to "編集する", edit_address_path(address) %></td>
          <td><%= link_to "削除する", method: :delete ,data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
