<div class="container mt-4">
  <div class="row col-sm-12">
    <h4 class="offset-sm-1">注文情報入力</h4>
  </div>
  <div>
    <%= form_with(model: @order, url: order_confirm_path, method: :post, local: true) do |f| %>
      <strong>支払方法</strong>
      <div class="radio">
        <%= f.radio_button :payment_method, "credit_card" %>
        <label> クレジットカード</label></br>
        <%= f.radio_button :payment_method, "transfer" %>
        <label>銀行振込</label>
      </div>
      <strong>お届け先</strong>
      <div class="radio">
        <%= radio_button_tag :select_address, :my_address %>
        <%= label_tag(:select_address, "ご自身の住所") %>
        <div class="radio">
          <%= "〒" + @customer.postal_code + " " + @customer.address %></br>
          <%= @customer.last_name + @customer.first_name %>
        </div>
      </div>
      <div class="radio">
        <%= radio_button_tag(:select_address, :selected_address) %>
        <%= label_tag(:select_address, "登録済住所から選択") %></br>
        <div class="radio">
          <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address) %>
        </div>
      </div>
      <div class="radio">
        <%= radio_button_tag(:select_address, :new_address) %>
        <%= label_tag(:select_address, "新しいお届け先") %>
        <div class="row">
          <label class="radio col-sm-3">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code, autofocus: true, class:"col-sm-2 radio-new"%>
        </div>
        <div class="row">
          <label class="radio col-sm-3">住所</label>
          <%= f.text_field :address, autofocus: true, class:"col-sm-4 radio-new"%>
        </div>
        <div class="row">
          <label class="radio col-sm-3">宛名</label>
          <%= f.text_field :name, autofocus: true, class:"col-sm-2 radio-new" %>
        </div>
      </div>
      <div class="row mt-4">
        <div class="offset-sm-4">
          <%= f.submit "確認画面へ進む",class:"btn btn-primary " %>
        </div>
      </div>
    <% end %>
  </div>
</div>