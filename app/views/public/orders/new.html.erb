<h2>注文情報入力</h2>
<div>
  <%= form_with(model: @order, url: order_confirm_path, method: :post, local: true) do |f| %>
    <h3>支払方法</h3>
    <div class="radio">
      <%= f.radio_button :payment_method, "credit_card" %>
      <label class="payment-label"> クレジットカード</label></br>
      <%= f.radio_button :payment_method, "transfer" %>
      <label class="payment-label">銀行振込</label>
    </div>
    <h3>お届け先</h3>
    <div class="radio">
      <%= radio_button_tag :select_address, :my_address %>
      <%= label_tag(:select_address, "ご自身の住所") %>
      <%= "〒" + @customer.postal_code + @customer.address %></br>
      <%= @customer.last_name + @customer.first_name %>
    </div>
    <div class="radio">
      <%= radio_button_tag(:select_address, :selected_address) %>
      <%= label_tag(:select_address, "登録済住所から選択") %></br>
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address) %>
    </div>
    <div class="radio">
      <%= radio_button_tag(:select_address, :new_address) %>
      <%= label_tag(:select_address, "新しいお届け先") %>
      <div class="field">
        <label class="postal-code-label">郵便番号(ハイフンなし)</label>
        <%= f.text_field :postal_code, autofocus: true, class:""%>
      </div>
      <div class="field">
        <label class="address-label">住所</label>
        <%= f.text_field :address, autofocus: true, class:"", size:"60*60"%>
      </div>
      <div class="field">
        <label class="address-label">宛名</label>
        <%= f.text_field :receive_name, autofocus: true, class:"" %>
      </div>
    </div>
    <div class="col-xs-offset-5">
      <%= f.submit "確認画面へ進む",class:"btn btn-primary col-xs-3 " %>
    </div>
  <% end %>
</div>