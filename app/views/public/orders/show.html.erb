<h2>注文履歴詳細</h2>
<div>
  <h3>注文情報</h3>
  <table>
    <tbody>
      <tr>
        <td>注文日</td>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <td>配送先</td>
        <td>
          <%= @order.postal_code %></br>
          <%= @order.address %></br>
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <td>支払方法</td>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <td>ステータス</td>
        <td><%= @order.order_status_i18n %></td>
      </tr>
    </tbody>
  </table>
</div>
<div>
  <h3>請求情報</h3>
  <table>
    <tbody>
      <tr>
        <td>合計金額</td>
        <td><%= @order.total_price %></td>
      </tr>
      <tr>
        <td>配送料</td>
        <td><%= @order.postage %></td>
      </tr>
      <tr>
        <td>請求金額</td>
        <td></td>
      </tr>
    </tbody>
  </table>
</div>
<div>
  <h3>注文内容</h3>
  <table>
    <thead>
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @order.product_orders.all.each  do |product| %>
        <tr>
          <td><%= product.item.name %></td>
          <td><%= product.price %></td>
          <td><%= product.amount %></td>
          <td><%= product.amount * product.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>