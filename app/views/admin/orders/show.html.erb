<div class="container">
  <div class="row">
    <h4 class="offset-sm-1">注文履歴詳細</h4>
  </div>
  <div class="row mt-4">
    <div class="col-sm-6">
      <table>
        <tbody>
          <tr>
            <td class="col-sm-3 pb-2 font-weight-bold">購入者</td>
            <td class="col-sm-8 pb-2">
              <%= link_to (admin_customer_path(@order.customer)) do %>
                <%= @order.customer.first_name + @order.customer.last_name %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td class="col-sm-3 pb-2 font-weight-bold">注文日</td>
            <td class="col-sm-8 pb-2"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td class="align-top col-sm-3 pb-2 font-weight-bold">配送先</td>
            <td class="col-sm-8 pb-2">
              <%= "〒" + @order.postal_code + @order.address %></br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td class="col-sm-3 pb-2 font-weight-bold">支払方法</td>
            <td class="col-sm-8 pb-2"><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <td class="col-sm-3 font-weight-bold">注文ステータス</td>
            <td class="col-sm-8">
              <%= form_with(model: @order, url: admin_orders_order_status_path, method: :patch, local: true) do |order| %>
                <%= order.select :order_status, Order.order_statuses.keys.map {|k| [I18n.t("enums.order.order_status.#{k}"), k]} %>
                <%= order.hidden_field :id, :value => @order.id %>
                <%= order.submit "更新",class:"btn btn-success ml-4 font-weight-bold"%>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mt-4">
    <div>
      <table class="table table-borderless border-top border-bottom" style="margin: 0;">
        <thead>
          <tr class="table-head" style="background-color:#F5F5F5;">
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order.product_orders.each do |detail| %>
            <tr>
              <td><%= detail.item.name %></td>
              <td><%= detail.price %></td>
              <td><%= detail.amount %></td>
              <td><%= detail.amount * detail.price %></td>
              <%= form_with(model: detail, url: admin_orders_item_status_path, method: :patch, local: true) do |f| %>
                <td>
                  <%= f.select :production_status, ProductOrder.production_statuses.keys.map {|k| [I18n.t("enums.product_order.production_status.#{k}"), k]} %>
                  <%= f.hidden_field :id, :value =>  detail.id %>
                  <%= f.submit "更新", class: "btn btn-success btn-sm ml-3 font-weight-bold" %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-3 d-flex align-self-end">
      <table class="table table-borderless", style="margin: 0;">
        <tbody>
          <tr>
            <td class="font-weight-bold">商品合計</td>
            <td></td>
          </tr>
          <tr>
            <td class="font-weight-bold">送料</td>
            <td></td>
          </tr>
          <tr>
            <td class="font-weight-bold">請求金額合計</td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>