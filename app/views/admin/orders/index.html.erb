<div class="container">
  <div class="row">
    <h4 class="offset-sm-1">注文履歴一覧</h4>
  </div>
  <div class="row mt-4">
    <div class="offset-sm-1 col-sm-10 ">
      <table class="table table-hover border-bottom">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order) %>
              </td>
              <td><%= order.customer.first_name + order.customer.last_name %></td>
              <% total_amount = 0 %>
              <% order.product_orders.all.each do |detail| %>
                <% total_amount += detail.amount %>
              <% end %>
              <td><%= total_amount %></td>
              <td><%= order.order_status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="container">
    <div class="row">
     <div class="mx-auto  mt-5">
      <%= paginate @orders %>
     </div>
    </div>
  </div>
</div>