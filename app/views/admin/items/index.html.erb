<h1>items index</h1>
<p>商品一覧</p>
<div>
  <%= link_to "＋", new_admin_item_path %>
</div>


<div>
  <table>
    <thread>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thread>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item) %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

