<div class="container mt-5">
  <div class="row">
    <div class="offset-sm-2">
      <h4>管理者ログイン</h4>
    </div>
  </div>
  <div class="row mt-4">
    <div class="mx-auto col-sm-6">
      <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
        <div class="row">
          <%= f.label :メールアドレス, class: "col-sm-4" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-8" %>
        </div>

        <div class="row mt-3">
          <%= f.label :パスワード, class: "col-sm-4" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-8" %>
        </div>

        <div class="row mt-4">
          <div class="mx-auto" >
            <%= f.submit "ログイン", class:"btn btn-primary" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
