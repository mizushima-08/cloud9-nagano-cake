<h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集 </h2>
<div>
  <%= form_with model: [:admin, @customer], local:true do |f| %>
    <div class="row">
      <%= f.label :会員id %>
      <%= f.label @customer.id %>
    </div>
    <div class="row">
      <%= f.label :氏名 %>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
    </div>
    <div class="row">
      <%= f.label :フリガナ %>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
    </div>
    <div class="row">
      <%= f.label :郵便番号 %>
      <%= f.text_field :postal_code %>
    </div>
    <div class="row">
      <%= f.label :住所 %>
      <%= f.text_field :address %>
    </div>
    <div class="row">
      <%= f.label :電話番号 %>
      <%= f.text_field :telephone_number %>
    </div>
    <div class="row">
      <%= f.label :メールアドレス %>
      <%= f.text_field :email %>
    </div>
    <div class="row">
      <%= f.label :会員ステータス %>
      <div>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "有効会員" %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "退会済み" %>
      </div>
    </div>
    <div>
      <%= f.submit "変更を保存" %>
    </div>
  <% end %>
</div>