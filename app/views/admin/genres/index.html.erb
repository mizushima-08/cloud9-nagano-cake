<div class="container">
  <div class="row">
    <h4 >ジャンル一覧・追加</h4>
  </div>
  <div class="row d-flex">
    <% if flash[:genre_created_error] %>
      <span class="text-danger"><%= flash[:genre_created_error] %></span>
    <% end %>
  </div>
  <div class="row mt-4">
    <div class="col-sm-6">
      <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
        ジャンル名
        <%= f.text_field :name, class: "offset-sm-1" %>
        <%= f.submit "新規登録", class: "btn btn-success font-weight-bold col-sm-3 offset-sm-1 " %>
      <% end %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-sm-4">
      <table class="table table-hover text-center">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td  class="text-left">
                <%= genre.name %>
              </td>
              <td>
                <%= link_to "編集する",edit_admin_genre_path(genre), class: "btn btn-success" %>
              </tb>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>